#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run prettier
echo "ğŸ” Checking code format..."
npm run format

# Run eslint
echo "ğŸ” Running linter..."
npm run lint

# Run type checking
echo "ğŸ” Checking types..."
npm run type-check

# Run tests
echo "ğŸ” Running tests..."
npm run test

# Run security audit
echo "ğŸ” Running security audit..."
npm audit

# Run dependency check
echo "ğŸ” Checking dependencies..."
npm run validate

# Run build
echo "ğŸ” Building project..."
npm run build

# Run size check
echo "ğŸ” Checking bundle size..."
npm run size

# Run performance check
echo "ğŸ” Checking performance..."
npm run perf

# Run accessibility check
echo "ğŸ” Checking accessibility..."
npm run a11y

# Run compatibility check
echo "ğŸ” Checking browser compatibility..."
npm run compat

# Run documentation check
echo "ğŸ” Checking documentation..."
npm run docs

# Run changelog check
echo "ğŸ” Checking changelog..."
npm run changelog

# Run license check
echo "ğŸ” Checking licenses..."
npm run license

# Run git hooks
echo "ğŸ” Running git hooks..."
npm run git-hooks 