#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run commitlint
echo "🔍 Checking commit message..."
npx --no -- commitlint --edit ${1}

# Run conventional commit check
echo "🔍 Checking conventional commit..."
npx --no -- conventional-commit-check --edit ${1}

# Run commit message length check
echo "🔍 Checking commit message length..."
npx --no -- commit-message-length-check --edit ${1}

# Run commit message format check
echo "🔍 Checking commit message format..."
npx --no -- commit-message-format-check --edit ${1}

# Run commit message scope check
echo "🔍 Checking commit message scope..."
npx --no -- commit-message-scope-check --edit ${1}

# Run commit message type check
echo "🔍 Checking commit message type..."
npx --no -- commit-message-type-check --edit ${1}

# Run commit message subject check
echo "🔍 Checking commit message subject..."
npx --no -- commit-message-subject-check --edit ${1}

# Run commit message body check
echo "🔍 Checking commit message body..."
npx --no -- commit-message-body-check --edit ${1}

# Run commit message footer check
echo "🔍 Checking commit message footer..."
npx --no -- commit-message-footer-check --edit ${1}

# Run commit message breaking check
