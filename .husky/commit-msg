npx --no -- commit-message-signed-off-check --edit ${1}

# Run commit message trailer check
echo "🔍 Checking commit message trailer..."
npx --no -- commit-message-trailer-check --edit ${1}

# Run commit message issue check
echo "🔍 Checking commit message issue..."
npx --no -- commit-message-issue-check --edit ${1}

# Run commit message note check
echo "🔍 Checking commit message note..."
npx --no -- commit-message-note-check --edit ${1}

# Run commit message action check
echo "🔍 Checking commit message action..."
npx --no -- commit-message-action-check --edit ${1}

# Run commit message prefix check
echo "🔍 Checking commit message prefix..."
npx --no -- commit-message-prefix-check --edit ${1}

# Run commit message suffix check
echo "🔍 Checking commit message suffix..."
npx --no -- commit-message-suffix-check --edit ${1}

# Run commit message case check
echo "🔍 Checking commit message case..."
npx --no -- commit-message-case-check --edit ${1}

# Run commit message empty check
echo "🔍 Checking commit message empty..."
npx --no -- commit-message-empty-check --edit ${1}

# Run commit message max length check
echo "🔍 Checking commit message max length..."
npx --no -- commit-message-max-length-check --edit ${1}

# Run commit message min length check
echo "🔍 Checking commit message min length..."
npx --no -- commit-message-min-length-check --edit ${1}

# Run commit message full stop check
echo "🔍 Checking commit message full stop..."
npx --no -- commit-message-full-stop-check --edit ${1}

# Run commit message leading blank check
echo "🔍 Checking commit message leading blank..."
npx --no -- commit-message-leading-blank-check --edit ${1}

# Run commit message max line length check
echo "🔍 Checking commit message max line length..."
npx --no -- commit-message-max-line-length-check --edit ${1}

# Run commit message min line length check
echo "🔍 Checking commit message min line length..."
npx --no -- commit-message-min-line-length-check --edit ${1}

# Run commit message footer max line length check
echo "🔍 Checking commit message footer max line length..."
