{
  "name": "cv2web-builder",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "nodemon",
    "dev:debug": "cross-env NODE_OPTIONS='--inspect' nodemon",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "prepare": "husky install",
    "start": "node dist/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "validate": "npm-run-all --parallel type-check lint test"
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "cheerio": "^1.0.0-rc.12",
    "handlebars": "^4.7.0",
    "html-pdf": "^3.0.1",
    "mammoth": "^1.6.0",
    "pdf-parse": "^1.1.1",
    "puppeteer": "^19.0.0",
    "sanitize-html": "^2.11.0",
    "sharp": "^0.33.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.0.0",
    "@types/puppeteer": "^7.0.0",
    "@types/sanitize-html": "^2.11.0",
    "@types/sharp": "^0.32.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.40.0",
    "husky": "^9.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^15.0.0",
    "nodemon": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0"
  }
}
